<%= simple_form_for @album, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@album[:name]) %>
  <%= f.input :description %>
  <%= error_span(@album[:description]) %>
  <%= f.input :cover %>
  <%= error_span(@album[:cover]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                albums_path, :class => 'btn btn-default' %>
<% end %>
