<h1>Listing songs</h1>

<table>
  <thead>
    <tr>
      <th>Trackname</th>
      <th>Trackfile</th>
      <th>Artist</th>
      <th>Album</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.trackname %></td>
        <td><%= link_to song.trackfile %></td>
        <audio controls>
        
        <source src="<%=song.trackfile%>" type="audio/mpeg">
           Your browser does not support the audio element.
       </audio>
       <%= audio_tag song.trackfile_url%>
        <td><%= song.artist %></td>
        <td><%= song.album %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

